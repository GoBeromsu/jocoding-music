{
  "name": "jocoding-music",
  "version": "0.1.0",
  "description": "Local-first desktop music player",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps",
    "dist": "pnpm build && electron-builder",
    "predist:mac": "test -f build/bin/yt-dlp || (echo 'ERROR: build/bin/yt-dlp not found. Download it first: curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o build/bin/yt-dlp && chmod +x build/bin/yt-dlp' && exit 1)",
    "dist:mac": "pnpm build && electron-builder --mac",
    "dist:win": "pnpm build && electron-builder --win",
    "dist:linux": "pnpm build && electron-builder --linux",
    "dist:mac:submission": "pnpm build && electron-builder --mac",
    "typecheck": "tsc --noEmit",
    "seed:demo": "npx tsx scripts/seed-demo.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.3.1",
    "lucide-react": "^0.468.0",
    "music-metadata": "^10.5.0",
    "openai": "^6.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^2.6.0",
    "yt-dlp-wrap": "^2.3.12",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
